<UserControl x:Class="NoeticTools.SystemsDashboard.Framework.Plugins.Tiles.DaysLeftCountDown.DaysLeftCountDownTileView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">

    <UserControl.Resources>

        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/NoeticTools.SystemsDashboard.Framework;component/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <Style TargetType="TextBlock" BasedOn="{StaticResource TealTileStyleTextbox}" />
            <Style TargetType="Grid" BasedOn="{StaticResource TealTileStyleGrid}" />
        </ResourceDictionary>

    </UserControl.Resources>

    <Border Name="FocusBorder" Style="{StaticResource FocusBorder}" Focusable="True">
        <Grid Name="root" Margin="0">

            <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" Height="Auto"
                    Margin="0">

                <TextBlock Name="header" HorizontalAlignment="Center" TextAlignment="Center" IsHitTestVisible="False"
                       TextWrapping="WrapWithOverflow"
                       FontSize="{Binding Path=ActualHeight, ElementName=root, 
                                    Converter={StaticResource doubleConverter}, ConverterParameter=0.15}"
                       FontWeight="Normal"
                       Foreground="{StaticResource TealTileStyleForegroundBrush}"
                       Margin="0,5,0,-2"
                           Text="{Binding Title, Mode=OneWay}"/>

                <TextBlock Name="days" HorizontalAlignment="Center" TextAlignment="Center" IsHitTestVisible="False"
                       FontSize="{Binding Path=ActualHeight, ElementName=root, 
                                    Converter={StaticResource doubleConverter}, ConverterParameter=0.4}"
                       FontWeight="Bold" Foreground="{StaticResource TealTileStyleForegroundBrush}"
                       Margin="0,0,0,-3"
                           Text="{Binding DaysRemaining, Mode=OneWay}"/>

                <TextBlock Name="footer" HorizontalAlignment="Center" TextAlignment="Center" IsHitTestVisible="False"
                       TextWrapping="WrapWithOverflow"
                       FontSize="{Binding Path=ActualHeight, ElementName=root, 
                                    Converter={StaticResource doubleConverter}, ConverterParameter=0.10}"
                       FontWeight="Normal"
                       Foreground="{StaticResource TealTileStyleForegroundBrush}"
                       Margin="0,-2,0,5">
                Days left
                </TextBlock>
            </StackPanel>

        </Grid>
    </Border>
    
</UserControl>